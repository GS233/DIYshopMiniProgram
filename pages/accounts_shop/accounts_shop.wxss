/* pages/accounts_shop/accounts_shop.wxss */

.container{
  padding: 0rpx;
  /* width: 100vh; */
  /* height: 100vh; */
  display: flex;
  flex-direction: column;
  justify-content:space-around; 
  /* 聚集方式 */
  align-items: center;
  /* 部署位置 */
  background: #eee;
}
.item-1{
  border-radius: 50rpx;
  margin-top: 60rpx;
  width: 650rpx;
  /* height: 420rpx; */
  background: #ffffff;
}
.text-1{
  margin-left: 35rpx;
  color: grey;
  display: block;
  font-size: 36rpx;
}
.div-line{
  padding: 0;
  margin: 0;
  height: 1px;
  background-color: #e0e3da;
}
.weui-grids {
  border-top: 1rpx solid rgba(0, 0, 0, 0.1);
  border-left: 1rpx solid rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.weui-grid {
  position: relative;
  float: left;
  padding: 20px 10px;
  width: 33.33333333%;
  box-sizing: border-box;
  border-right: 1rpx solid rgba(0, 0, 0, 0.1);
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}
.weui-grid_active {
  background-color: #ececec;
}

.weui-grid__icon {
  display: block;
  width: 28px;
  height: 28px;
  margin: 0 auto;
}

.weui-grid__label {
  margin-top: 5px;
  display: block;
  text-align: center;
  color: rgba(0, 0, 0, 0.9);
  font-size: 14px;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.weui-cell {
  
  padding: 16px;
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}
.weui-cells {
    border-radius: 50rpx;
  position: relative;
  margin-top: 8px;
  background-color: #fff;
  line-height: 1.41176471;
  font-size: 17px;
}
.weui-cells__title {
  margin-top: 16px;
  margin-bottom: 3px;
  padding-left: 16px;
  padding-right: 16px;
  color: rgba(0, 0, 0, 0.5);
  font-size: 14px;
}
.weui-cells_after-title {
  margin-top: 0;
}
.weui-cell__bd {
  border-radius: 50rpx;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  
}
.weui-cell__b{
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  margin-top: 25rpx;
  margin-bottom: 25rpx;
}
.weui-cell__ft {
  border-radius: 50rpx;
  text-align: right;
  color: rgba(0, 0, 0, 0.5);
}
