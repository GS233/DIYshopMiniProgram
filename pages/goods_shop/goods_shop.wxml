<!--pages/goods_shop/goods_shop.wxml-->
<view class="div_line_5"></view>
<view class="container">
  <scroll-view class='nav_left' scroll-y='true'>
    <block wx:for="{{cateItems}}" wx:key="{{index}}">
      <view class="nav_left_items {{curNav==item.cate_id?'active':''}}" bindtap="switchRightTab" data-index='{{index}}' data-id="{{item.cate_id}}">{{item.cate_name}}</view>
    </block>
  </scroll-view>

  <scroll-view class="nav_right" scroll-y="true">
    <!--如果有数据，才遍历项-->
    <view wx:if="{{cateItems[curIndex].children.length>0}}">
      <block wx:for="{{cateItems[curIndex].children}}" wx:key="{{index}}">
        <view class="nav_right_items">
          <!--界面跳转 -->
          <navigator url="../../detail/detail">
            <image src="{{item.image}}"></image>
            <text>{{item.name}}</text>
          </navigator>
        </view>
      </block>
    </view>
    <!--如果无数据，则显示数据-->
    <view class="nocate" wx:else>
    <view class="container">
 
    <view class='img_list'>
      <view class='img_li' wx:for="{{imglist}}" wx:key="{{index}}">
        <image src="{{item}}"></image>
      </view>
      <view class='addimg' bindtap='img_w_show'>
        <image src='/assets/image/add.png'></image>
        <input placeholder="输入商品名" />
      </view>
    </view>
  

    <view class='img_list'>
      <view class='img_li' wx:for="{{imglist}}" wx:key="{{index}}">
        <image src="{{item}}"></image>
      </view>
      <view class='addimg' bindtap='img_w_show'>
        <image src='/assets/image/add.png'></image>
        <input placeholder="输入商品名" />
      </view>
    </view>

</view>
    </view>
  </scroll-view>
</view>