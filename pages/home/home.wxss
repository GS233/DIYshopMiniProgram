/* pages/home/home.wxss */

.container {
  padding: 10rpx;
  /* display: flex; */
  width: 100%;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  background: rgb(238, 238, 238);
}

.container-white {
  margin: 20rpx;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  background: #eee;
}

.container-white {
  padding: 20rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  background: #fff;
}

.view-radius {
  background: white;
  margin: 20rpx;
  width: 90%;
  border-radius: 5px;
  height: 175rpx
}

.weui-cell {
  padding: 16px;
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}

.weui-grid {
  position: relative;
  float: left;
  padding: 5px 5px;
  width: 20%;
  box-sizing: border-box;
  /* border-right: 1rpx solid rgba(0, 0, 0, 0.1); *//* border-bottom: 1rpx solid rgba(0, 0, 0, 0.1); */
}
.weui-grid3 {
  position: relative;
  float: left;
  padding: 5px 5px;
  width: 33.3%;
  box-sizing: border-box;
  /* border-right: 1rpx solid rgba(0, 0, 0, 0.1); *//* border-bottom: 1rpx solid rgba(0, 0, 0, 0.1); */
}
.weui-grid4 {
  position: relative;
  float: left;
  padding: 5px 5px;
  width: 25%;
  box-sizing: border-box;
  /* border-right: 1rpx solid rgba(0, 0, 0, 0.1); *//* border-bottom: 1rpx solid rgba(0, 0, 0, 0.1); */
}
.weui-grids {
  /* border-top: 1rpx solid rgba(0, 0, 0, 0.1); *//* border-left: 1rpx solid rgba(0, 0, 0, 0.1); */
  overflow: hidden;
}

.weui-grid_active {
  background-color: #ececec;
}

.weui-grid__icon {
  display: block;
  width: 28px;
  height: 28px;
  margin: 0 auto;
}

.weui-grid__label {
  margin-top: 5px;
  display: block;
  text-align: center;
  color: rgba(0, 0, 0, 0.9);
  font-size: 10px;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.weui-cells {
  position: relative;
  margin-top: 8px;
  background-color: #fff;
  line-height: 1.41176471;
  font-size: 17px;
}

.weui-cell__bd {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
}

.show_list {
  margin-left: 40rpx;
  margin-top: 10rpx;
  height: calc(100vh - 80rpx);
}



.btns {
  width: 750rpx;
  height: 650rpx;
  display: flex;
  flex-direction: column;
  padding-top: 90rpx;
  box-sizing: border-box;
  justify-content: space-around;
}

.btn-oneline {
  position: relative;
  display: flex;
  width: 600rpx !important;
  height: 175rpx;
  background: rgb(255, 255, 255);
  border-radius: 12rpx;
  padding: 0;
  align-items: center;
  border: 0;
  outline: none;
}

.btn-oneline__icon {
  width: 64rpx;
  height: 64rpx;
  margin-right: 50rpx;
}

.btn-oneline__tag {
  position: absolute;
  width: 64rpx;
  height: 33rpx;
  top: 0;
  left: 488rpx;
}

.btn-oneline__text {
  display: flex;
  flex-direction: column;
  margin-left: 60rpx;
}

.oneline-text__title {
  font-size: 50rpx;
  font-weight: 500;
  color: rgb(15, 15, 15);
  margin-left: 110rpx
}

.oneline-text__desc {
  font-size: 30rpx;
  font-weight: 500;
  color: rgb(90, 85, 85);
  margin-left: 40rpx
}

.btn-pk > .btn-oneline__tag {
  height: 36rpx;
  width: 44rpx;
  left: 506rpx;
}

.btn-two-wrap {
  display: flex;
  justify-content: space-between;
  padding: 0 50rpx;
  background-color:#ececec
}

.btn-two {
  position: relative;
  width: 288rpx!important;
  height: 180rpx;
  background:#fff;
  border-radius: 12rpx;
  padding: 0;
  border: 0;
  outline: none;
}

.btn-two__text {
  margin-top: 24rpx;
  margin-left: 48rpx;
  display: flex;
  flex-direction: column;
  text-align: left;
}

.btn-two__title {
  font-size: 32rpx;
  font-weight: 500;
  color: rgb(15, 15, 15);
}

.btn-two__desc {
  font-size: 27rpx;
  font-weight: 500;
  color: rgb(90, 85, 85);
}

.btn-two__icon {
  width: 69rpx;
  height: 64rpx;
  position: absolute;
  top: 108rpx;
  left: 189rpx;
}
