/* pages/home/home.wxss */

.container {
  padding: 10rpx;
  /* display: flex; */
  width: 100%;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  background: #eee;
}

.container-white {
  margin: 20rpx;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  background: #eee;
}

.container-white {
  padding: 20rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  background: #fff;
}

.view-radius {
  background: white;
  margin: 20rpx;
  width: 95%;
  border-radius: 5px;
}

.weui-cell {
  padding: 16px;
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}

.weui-grid {
  position: relative;
  float: left;
  padding: 5px 5px;
  width: 20%;
  box-sizing: border-box;
  /* border-right: 1rpx solid rgba(0, 0, 0, 0.1); *//* border-bottom: 1rpx solid rgba(0, 0, 0, 0.1); */
}
.weui-grid3 {
  position: relative;
  float: left;
  padding: 5px 5px;
  width: 33.3%;
  box-sizing: border-box;
  /* border-right: 1rpx solid rgba(0, 0, 0, 0.1); *//* border-bottom: 1rpx solid rgba(0, 0, 0, 0.1); */
}
.weui-grid4 {
  position: relative;
  float: left;
  padding: 5px 5px;
  width: 25%;
  box-sizing: border-box;
  /* border-right: 1rpx solid rgba(0, 0, 0, 0.1); *//* border-bottom: 1rpx solid rgba(0, 0, 0, 0.1); */
}
.weui-grids {
  /* border-top: 1rpx solid rgba(0, 0, 0, 0.1); *//* border-left: 1rpx solid rgba(0, 0, 0, 0.1); */
  overflow: hidden;
}

.weui-grid_active {
  background-color: #ececec;
}

.weui-grid__icon {
  display: block;
  width: 28px;
  height: 28px;
  margin: 0 auto;
}

.weui-grid__label {
  margin-top: 5px;
  display: block;
  text-align: center;
  color: rgba(0, 0, 0, 0.9);
  font-size: 10px;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.weui-cells {
  position: relative;
  margin-top: 8px;
  background-color: #fff;
  line-height: 1.41176471;
  font-size: 17px;
}

.weui-cell__bd {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
}

.show_list {
  margin-left: 40rpx;
  margin-top: 10rpx;
  height: calc(100vh - 80rpx);
}
